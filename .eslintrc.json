{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "indent": [
            0,
            2,
            { "SwitchCase": 1 }
        ],
        "no-extra-semi": "warn",
        "no-unused-vars": "warn",
        "no-trailing-spaces": 0,
        "no-case-declarations": "warn",
        "no-unreachable": "warn",
        "no-multiple-empty-lines": 0,
        "prefer-const": 0,
        "space-infix-ops": "warn",
        "camelcase": 0,
        "no-console": 0,
        "linebreak-style": 0,
        "quotes": 0,
        "semi": 0
    }
}
